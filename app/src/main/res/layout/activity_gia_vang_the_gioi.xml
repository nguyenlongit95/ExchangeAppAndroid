<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GiaVangTheGioiActivity">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0D7E7E80"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TableLayout
            android:id="@+id/menuLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FFFFFF">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnTyGia"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Tỷ Giá"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnNgoaiTe"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Ngoại Tệ"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnGiaVang"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Giá Vàng"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnLaiSuat"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Lãi Suất"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnTienAo"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Tiền Ảo"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="72dp" />
        </TableLayout>

        <TableLayout
            android:id="@+id/navbarLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnSJC"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="SJC"
                    android:textSize="12sp"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/btnPNG"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="PNG"
                    android:textSize="12sp"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/btnDOJI"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="DOJI"
                    android:textSize="12sp"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/btnPhuQuy"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="Phú Quý"
                    android:textSize="8sp"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/btnBTMC"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="BTMC"
                    android:textSize="12sp"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/btnTheGioi"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="Kitco"
                    android:textSize="12sp"
                    android:textStyle="bold|italic" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

        <TextView
            android:id="@+id/txtBanner1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text=" Banner Quảng Cáo 1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Gía vàng thế giới"
                android:textColor="#FF5722"
                android:textSize="18sp"
                android:textStyle="bold" />

            <WebView
                android:id="@+id/iframeKitco"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </WebView>

        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biểu đồ cập nhật giá vàng thế giới thông qua hệ thống của Kitco " />

        <Button
            android:id="@+id/btnXangDauTG"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Xăng dầu thế giới"
            android:textColor="#FF9800"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="© Copyright 2019. EXCHANGES APP - Ứng dụng cập nhật nhanh giá cả thị trường."
            android:textSize="8sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>